@{
    ViewBag.Title = "Home Page";
}

@model AesHashGenerator.Controllers.HashGenViewModel

<div class="jumbotron">
    <h1>HMACSHA512 Hash Test</h1>
    <p class="lead">Utility to hash a value with the specified secret</p>

</div>

<div class="row">
    <div class="col-md-12">
        <h2>Getting started</h2>
        <p>


            @using (Html.BeginForm("Hash", "Home", FormMethod.Post, new { @class = "form-horizontal", id = "cardForm" }))
            {
                @Html.AntiForgeryToken()


                <div class="form-group">
                    @Html.Label("Hash Secret / Passphase", new { @class = "col-xs-4 col-sm-5 control-label", @for = "txtHashSecret" })
                    <div>
                        @Html.TextBox("HashSecret", Model.HashSecret, new { @class = "form-control input-", style = "float: left;" })
                        <span class="ValidationAsteriskContainer">
                            @Html.ValidationMessageFor(e => e.HashSecret, "*")
                        </span>
                    </div>
                </div>


                <div class="form-group">
                    @Html.Label("Original Value", new { @class = "col-xs-4 col-sm-5 control-label", @for = "txtValueToBeHashed" })
                    <div>
                        @Html.TextBox("ValueToBeHashed", Model.ValueToBeHashed, new { @class = "form-control input-", style = "float: left;" })
                        <span class="ValidationAsteriskContainer">
                            @Html.ValidationMessageFor(e => e.HashedValue, "*")
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Hashed Value", new { @class = "col-xs-4 col-sm-5 control-label", @for = "txtHashedValue" })
                    <div>

                        @Html.Label("HashedValue1", Model.HashedValue, new { @class = "form-control input-", style = "float: left;" })
                    </div>
                </div>




                <div class="form-group">
                    <div class="col-xs-4"></div>
                    <div class="col-sm-offset-5 col-xs-8 col-sm-7">
                        <button type="submit" class="btn btn-default dark">Submit</button>

                    </div>
                </div>
            }

        </p>
         
    </div>

</div>